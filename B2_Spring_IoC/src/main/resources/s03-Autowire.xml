<?s01_xml version="1.0" encoding="UTF-8"?>

<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
                           http://www.springframework.org/schema/beans/spring-beans.xsd">


    <bean id="service1" class="s03_autowire.DiAutowireByName$Service1">
        <property name="desc1" value="service1"/>
    </bean>

    <bean id="service2" class="s03_autowire.DiAutowireByName$Service2">
        <property name="desc2" value="service2"/>
    </bean>

    <bean id="service12" class="s03_autowire.DiAutowireByName$Service2">
        <property name="desc2" value="service12"/>
    </bean>

    <!--    byName：按照名称进行注入-->
    <!--    byType：按类型进行注入-->
    <!--    constructor：按照构造方法进行注入-->
    <!--    default：默认注入方式-->
    <bean id ="diByName1" class="s03_autowire.DiAutowireByName" autowire="byName">
    </bean>

    <!-- 当配置了自动注入，还可以使用手动的方式自动注入进行覆盖，手动的优先级更高一些 -->
    <bean id ="diByName2" class="s03_autowire.DiAutowireByName" autowire="byName">
        <property name="service2" ref="service12"/>
    </bean>
<!--====================================================-->

    <bean id="nservice1" class="s03_autowire.DiAutowireByType$Service1">
        <property name="desc1" value="service1"/>
    </bean>

    <bean id="nservice2" class="s03_autowire.DiAutowireByType$Service2">
        <property name="desc2" value="service2"/>
    </bean>

    <bean id="nservice21" class="s03_autowire.DiAutowireByType$Service2">
        <property name="desc2" value="service2"/>
    </bean>

    <bean id ="diByType" class="s03_autowire.DiAutowireByType" autowire="byType">
<!--        若有多个相同类型的bean对象，需要指定-->
        <property name="service2" ref="nservice21"/>
    </bean>
    <!--====================================================-->


    <bean id="cservice1" class="s03_autowire.DiAutowireByConstructor$Service1">
        <property name="desc" value="service1"/>
    </bean>

    <bean id="cservice2" class="s03_autowire.DiAutowireByConstructor$Service2">
        <property name="desc" value="service2"/>
    </bean>

    <bean id="diByComstructor" class="s03_autowire.DiAutowireByConstructor" autowire="constructor">
    </bean>

</beans>